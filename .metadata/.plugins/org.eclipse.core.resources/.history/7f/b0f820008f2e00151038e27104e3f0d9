from methodology.clsSimpleKey import SimpleKey

class SimpleKeyGenerator(object):
	'''
	classdocs
	'''
	
	def __init__(self, pKeyGen = BasicKeyGenerator()):
		'''
		Constructor
		'''
		self.keyGen = pKeyGen
	
	def generate(self, pPasswordList, pResult, pName = BasicBigIntGenerator(64).generate()):
		lclKey = self.keyGen.generate(pPasswordList, pResult.password())
		return BasicLabelledKey(pName,pPasswordList.getIdentifierList(), pResult.identifier(), "Simple", lclKey)